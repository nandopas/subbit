<p id="notice"><%= notice %></p>

<% if current_user && current_user.admin? %>

<h1> <%= @user.username + "'s" %> profile </h1>
<% if current_user.admin? %>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% end %>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>User since:</strong>
  <%= @user.created_at %>
</p>
<% end %>

<h1> <%= @user.username + "'s" %> posts </h1>
<%= render @user.posts %>

<% if current_user.id == @user.id %>
<div class="btn-group" role="group">
	<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default", style: "background-color:#cce6ff; color:white" %>
	<%= link_to 'Delete account', @user, method: :delete, data: { confirm: 'Are you sure? Account is not recoverable'}, class: "btn btn-default", style: "background-color:#cce6ff; color:white" %>
</div>
<% end %>
