<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
<div class="btn-group" role="group" >
  <%= link_to "Sign Up", signup_path, class: "btn btn-primary", style: "color:white" %>
  <%= link_to "Log In", login_path, class: "btn btn-secondary", style: "color:white" %>
</div>
  
<% end %>

<p id="notice"><%= notice %></p>
