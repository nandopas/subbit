<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "Log Out", logout_path %>
<% else %>
<div class="btn-group" role="group" >
  <%= link_to "Sign Up", signup_path, class: "btn btn-default", style: "background-color:#cce6ff; color:white" %>
  <%= link_to "Log In", login_path, class: "btn btn-default", style: "background-color:#cce6ff; color:white" %>
</div>
  
<% end %>

<p id="notice"><%= notice %></p>
