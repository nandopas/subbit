

<h1>
  <%= link_to 'Subbit!', controller: 'home' %>
</h1>


<%= render 'home/login' %>

<h2>All Posts Existing</h2>


<table>
  <tr>
    <th>Post Topic</th>
    <th>User</th>
    <th>Link</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.topic %></td>
      <td><%= post.user %></td>
      <td><%= link_to 'Show this post', [post.subway_stop, post] %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Subway Stops Index', subway_stops_path %>
