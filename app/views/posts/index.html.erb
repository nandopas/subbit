<h1>Subbit!</h1>
<h2>All Posts Existing</h2>


<table>
  <tr>
    <th>Post Topic</th>
    <th>User</th>
    <th>Link</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.topic %></td>
      <td><%= post.user %></td>
      <td><%= link_to 'Show this post', subway_stop_posts_path(post) %></td>
    </tr>
  <% end %>
</table>

