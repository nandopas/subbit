
<div class="container">

  <h2>All Posts Existing</h2>

  <%= render @posts %>

  <% if false %>
  <table>
    <tr>
      <th>Post Topic</th>
      <th>User</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.topic %></td>
        <td>
          <% if post.username != nil %>
            <%= link_to post.username, user_path(post.user.id) %>
          <% else %>
            [deleted] 
          <% end %>
        </td>
        <td><%= link_to 'Show this post', [post.subway_stop, post] %></td>
      </tr>
    <% end %>
  </table>
  <% end %>
</div>
